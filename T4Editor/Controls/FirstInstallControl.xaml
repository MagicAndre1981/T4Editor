<UserControl x:Class="T4Editor.Controls.FirstInstallControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:T4Editor.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="250">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Height="180" HorizontalAlignment="Center">
            <TextBlock TextWrapping="Wrap" Text="Thank you for installing T4Editor." HorizontalAlignment="Center"/>
            <TextBlock TextWrapping="Wrap" Text="Please select your color theme:" HorizontalAlignment="Center"/>
            <ComboBox Margin="15" x:Name="selectThemeComboBox" HorizontalAlignment="Stretch" Width="150" SelectedIndex="0">
            <ComboBoxItem Content="Dark Theme"/>
            <ComboBoxItem Content="Light Theme"/>
        </ComboBox>
            <Button Content="OK" Width="75" Height="25" Click="OnOkClicked"/>
        </StackPanel>
    </Grid>
</UserControl>
